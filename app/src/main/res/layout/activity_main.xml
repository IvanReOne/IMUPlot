<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ap_black"
    tools:context="com.example.alps.imuplot.MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <com.androidplot.xy.XYPlot
            android:id="@+id/tracePlot"
            androidPlot.backgroundPaint.color="#000000"
            androidPlot.borderPaint.color="#000000"
            androidplot.renderMode="use_background_thread"
            android:layout_width="wrap_content"
            android:layout_height="550dp"
            android:layout_margin="0dp"
            android:background="@drawable/cic2mod"
            android:fitsSystemWindows="true"
            android:visibility="visible"
            ap:backgroundColor="@color/ap_transparent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/stepCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="top"
                android:padding="0dp"
                android:paddingTop="0dp"
                android:text="0"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/geomagneticRVLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:gravity="top"
                android:padding="0dp"
                android:paddingTop="0dp"
                android:text="am:"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/geomagneticRV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:gravity="top"
                android:padding="0dp"
                android:paddingTop="0dp"
                android:text="-180"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/gameRVLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:gravity="top"
                android:padding="0dp"
                android:paddingTop="0dp"
                android:text="ag:"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/gameRV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="top"
                android:padding="0dp"
                android:paddingTop="0dp"
                android:text="-180"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="8dp" />

            <TextView
                android:id="@+id/headingOffsetLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:gravity="top"
                android:padding="0dp"
                android:paddingTop="0dp"
                android:text="o:"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/headingOffset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.60"
                android:gravity="top"
                android:padding="0dp"
                android:paddingTop="0dp"
                android:text="-180"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="18sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/startStop"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Start/Stop"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>




